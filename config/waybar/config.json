{
    "layer": "top",
    "position": "top",
    "height": 36,
    "spacing": 8,
    "modules-left": [
        "niri/workspaces",
        "niri/window"
    ],
    "modules-center": [],
    "modules-right": [
        "custom/session",
        "idle_inhibitor",
        "tray",
        "bluetooth",
        "network",
        "pulseaudio",
        "battery",
        "clock"
    ],
    "niri/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "active": "",
            "urgent": "",
            "default": ""
        },
        "on-click": "activate",
        "all-outputs": false,
        "separate-outputs": true
    },
    "niri/window": {
        "format": "{}",
        "max-length": 40,
        "rewrite": {
            "wezterm": " 终端"
        }
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        },
        "tooltip-format-activated": "待机抑制已启用",
        "tooltip-format-deactivated": "待机抑制已禁用"
    },
    "clock": {
        "interval": 1,
        "format": "{:%H:%M:%S}",
        "format-alt": "{:%Y年%m月%d日 %A}"
    },
    "bluetooth": {
        "format": "{icon}",
        "format-connected": "{icon} {num_connections}",
        "format-connected-battery": "{icon} {device_battery_percentage}%",
        "format-disabled": "{icon}",
        "format-off": "{icon}",
        "format-icons": {
            "enabled": "󰂯",
            "disabled": "󰂲",
            "connected": "󰂱"
        },
        "tooltip-format": "{controller_alias}\t{controller_address}\n状态: {status}",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} 个已连接设备:\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t电量: {device_battery_percentage}%",
        "on-click": "blueman-manager"
    },
    "network": {
        "format-wifi": " {essid}",
        "format-ethernet": "󰈀 有线",
        "format-disconnected": "󰤭 断开",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr}\n⬇ {bandwidthDownBytes} ⬆ {bandwidthUpBytes}",
        "tooltip-format-wifi": "{essid} ({signalStrength}%)\n{ifname}: {ipaddr}/{cidr}\n⬇ {bandwidthDownBytes} ⬆ {bandwidthUpBytes}",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ]
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": " 静音",
        "format-icons": {
            "headphone": "",
            "headset": "",
            "default": [
                "",
                "",
                ""
            ]
        },
        "tooltip-format": "{desc}\n音量: {volume}%",
        "on-click": "pavucontrol",
        "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
    },
    "custom/session": {
        "format": "",
        "tooltip": "会话菜单",
        "interval": 0,
        "on-click": "sh -c '~/.config/waybar/session-menu.sh'"
    }
}
